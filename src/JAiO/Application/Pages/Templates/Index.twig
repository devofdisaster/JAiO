<div class="row">
    <div class="col-xs-12">
        <div class="col-xs-1 col-xs-offset-11">
            <a href="{{ url('pages_new') }}" class="btn btn-success">New page</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-3">Name</div>
    <div class="col-xs-5">Url</div>
    <div class="col-xs-2 col-xs-offset-2"></div>
</div>
<ul class="list-group pages">
    {% for i, page  in pages %}
        <li class="list-group-item">
            <div class="row">
                <div class="col-xs-3 name">
                    <span>{{ page.name }}</span>
                </div>
                <div class="col-xs-5 url">
                    <a href="{{ page.url }}">{{ page.url }}</a>
                </div>
                <div class="col-xs-1 col-xs-offset-3 buttons">
                    <a href="{{ url('edit', {uuid: page.uuid}) }}" class="btn btn-success" target="_blank">Edit</a>
                </div>
            </div>
        </li>
    {% endfor %}
</ul>
